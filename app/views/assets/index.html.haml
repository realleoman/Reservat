%div{:class => "span-3 colborder" , :id => "sidebar" } 
	%h3{:class=> "alt"} 
		%a{ :href => "/assets/" , :class => "quiet"} List Assets
	%h3{:class=> "alt"} 
		%a{ :href => "/assets/new" , :class => "quiet"} New Assets
%div{:class => "span-19" , :id => "content" } 			
	%table{:border => "1"}
		%thead
			%th Name
			%th View
			%th New reservation
		%tbody
			- @assets.each do |asset|
				%tr
					%td= asset.name
					%td= link_to 'View', asset_path(asset)
					%td= link_to 'Create', new_asset_reservation_path(asset)

