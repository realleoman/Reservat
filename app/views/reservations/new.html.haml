%h3 New reservation

%p= @asset.name

= form_for @reservation, :url => asset_reservations_path(@asset) do |f|
    %fieldset
        %label Comment
        = f.text_field :comment
        %br
        /%label Start at
        /= f.datetime_select :start_at
        %br
        /%label Stop_at
        /= f.datetime_select :stop_at
        = f.hidden_field :start_at
        = f.hidden_field :stop_at
        %br
        = button_to_function 'Create', "send_data()"

