%div{:class => "span-3 colborder" , :id => "sidebar" } 
	%h3{:class=> "alt"} 
		%a{ :href => "/assets/" , :class => "quiet"} List Assets
	%h3{:class=> "alt"} 
		%a{ :href => "/assets/new" , :class => "quiet"} New Assets
%div{:class => "span-19" , :id => "content" }
	= form_for @asset, :url => assets_path(@asset) do |f|
		%fieldset
			%label Name
			= f.text_field :name
			%br
			= f.collection_select :asset_type_id, AssetType.all, :id, :name
			%br
			= f.submit 'Crear'